{
  "@xform:remove": {
    "scripts": "scripts",
    "devDependencies": "devDependencies"
  },
  "@xform:merge": {
    "bin.xform": "bin/xform"
  },
  "name": "@guscrawford.com/json-xform-cli",
  "version": "1.4.1",
  "description": "A cli that transforms JSON",
  "main": "xform-cli.ts",
  "repository": "https://github.com/guscrawford-com/json-xform-cli",
  "author": "Gus Crawford <crawford.gus@gmail.com>",
  "license": "MIT",
  "bin": {
    "xform": "dist/bin/xform-cli.js"
  },
  "devDependencies": {
    "@types/jasmine": "^3.3.13",
    "cpy-cli": "^2.0.0",
    "jasmine": "^3.4.0",
    "marked": "^0.6.3",
    "renamer": "^1.1.2",
    "rimraf": "^2.6.3",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2"
  },
  "scripts": {
    "binary": "cpy config/bin/xform dist/bin",
    "package": "yarn build && yarn docs && yarn user-test package.json --out dist/package.json && cpy README.md dist && cpy CHANGELOG.md dist && yarn binary && cpy docs dist --parents",
    "docs": "rimraf docs && typedoc --out docs/html ./src && marked HELP.md > docs/html/HELP.html",
    "build": "rimraf dist && tsc",
    "test": "yarn build:test && yarn run:test",
    "build:test": "jasmine \"test/**/*[sS]pec.js\"",
    "run:test": "jasmine \"test/**/*[sS]pec.js\"",
    "build:user-test": "yarn build && yarn user-test",
    "user-test": "node dist/lib/xform-cli.js",
    "release": "yarn package && cd dist && yarn publish --access=public"
  },
  "dependencies": {
    "@guscrawford.com/cleye": "^0.0.3-beta",
    "@guscrawford.com/json-xform": "1.5.0",
    "open": "^6.4.0"
  }
}
